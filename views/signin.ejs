<% include layout/header %>


<form action="signin" method="post" class="form-md">
    <h1>Sign in</h1>
    <div class="form-group">
        <input type="text" name="username" placeholder="Username" class="form-control form-control-lg"/>
    </div>
    <div class="form-group">
        <input type="password" name="password" placeholder="Password" class="form-control form-control-lg"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign in" class="btn btn-primary btn-block btn-lg"/>
        <a href="/signup" class="btn btn-secondary btn-block btn-lg">Sign up</a>
    </div>
    <% if (typeof message != 'undefined') { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
</form>

<% include layout/footer %>